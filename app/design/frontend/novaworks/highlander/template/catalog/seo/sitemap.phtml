?>
<?php $_items = $this->getCollection(); 


?>
<?php if($_items->getSize()): ?>
    <ul class="sitemap">
        <?php foreach ($_items as $_item):
        $name = $this->escapeHtml($_item->name);
        $trimName =  str_replace(' ', '',$name);
        $ID = strtolower($trimName).$_item->getId();
        $URL = $this->getItemUrl($_item);
        $target = ""; 
       switch($ID){
        case 'aboutus8':
        $path = $this->getUrl('about-us');  
        break;
        case 'benefitsofbambooclothing10':
        $path = $this->getUrl('bamboo-clothing');  
        break;
        case 'dusgcalendar15':
        $path = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_WEB)."pdf/DUSG-calendar.pdf";
        $target ="target='_blank'";
        break;
        case 'lookbook14':
        $path = "http://fusionclothing.com/dusg-intl-ebrochure-2012/dusg-intl-ebrochure.html";  
        $target ="target='_blank'"; 
        break;
        case 'ourcsr12':
        $path = $this->getUrl('our-csr');  
        break;
        case 'ourstores13':
        $path = $this->getUrl('our-stores');  
        break;
        case 'videos11':
        $path = "http://www.youtube.com/watch?v=aAvsuuathrE";
        $target ="target='_blank'";    
        break;
        case 'whyorganic?9':
        $path = $this->getUrl('organic-cotton');  
        break;
        case 'thebrand7':
        $path = "javascript:void(0);";  
        break;
        default:
        $path = $URL;
        break;
        }  
        ?>
            <li><a  id ="<?php echo $ID; ?>" <?php echo $target ?> href="<?php echo $path  ?>"><?php echo $name; ?></a></li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p class="note-msg">
        <?php echo $this->__('There are no %s available.', $this->getItemsTitle()); ?>
    </p>
    <script type="text/javascript">
    //<![CDATA[
        if ($('sitemap_top_links') != undefined) {
            $('sitemap_top_links').hide();
        }
    //]]>
    </script>
<?php endif ?>
